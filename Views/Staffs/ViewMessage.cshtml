@model NewDepot.Models.messages

@{
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
    ViewBag.Title = Model.subject;
    var app = (applications)ViewBag.application;
}

<div class="">

    <div class="row" id="BackImage">

        <br />
        <h3 class="DashCompanyName">  @ViewBag.Title </h3>

        <div class="righty" style="padding-right:0px; padding-top:0px">

            <a href="@Url.Action("MyMessages", "Staffs")" class="btn btn-xs btn-info">Back to Messages <i class="fa fa-arrow-left"></i></a>

        </div>
        <hr />
    </div>

</div>
<div class="marg50"></div>



<div class="row">
    <div class="col-md-2"></div>
    <center>
        <div face="Helvetica, arial, sans-serif">
            <div style=" width:800px;background-color: #ece8d4; padding: 5px 0 5px 0;">
                <img src="~/images/nmdpra.png" alt="Logo" style="width: 30%; height: 120px; display: block; margin: 0 auto;" />
            </div>

            <div style="background-color: #ece8d4; width:800px; min-height:200px;" class="text-left">
                <div style="padding: 10px 30px 30px 30px;">
                    <h5 style="text-align: center;font-weight: 300;padding-bottom: 10px; border-bottom: 1px solid #ddd;">@Model.subject</h5>
                    <p>Dear Sir/Madam,</p>
                    <p></p>
                    <p style="line-height:30px; text-align:justify">
                        @Html.Raw(Model.content)
                    </p>
                    <table style="width: 100%;">
                        @if (app != null)

                        {


                            <tr>
                                <td style="width: 200px;"><b>Reference:</b></td>
                                <td>@app.reference</td>
                            </tr>

                            <tr>
                                <td><b>Facility Details:</b></td>
                                <td>@ViewBag.Facility</td>
                            </tr>
                            <tr>
                                <td><strong>Payment Description:</strong></td>
                                <td> @app.PaymentDescription  </td>
                            </tr>
                        }

                    </table>

                    <hr />

                    <br />
                    <p>
                        Nigerian Midstream and Downstream Petroleum Regulatory Authority<br />
                        <small>(PDJ Depot)</small>
                    </p>
                </div>
            </div>
            <div style="padding: 10px 0; text-align: center; background-color: #888; color: #f9f9f9; width:800px">
                &copy; @DateTime.UtcNow.AddHours(1).Year Nigerian Midstream and Downstream Petroleum Regulatory Authority &minus; NMDPRA Nigeria
            </div>
        </div>

    </center>
</div>