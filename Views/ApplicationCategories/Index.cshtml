
@{
    ViewData["Title"] = "Application Category Configuration";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<br />

<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Create Application Category
                </span>
            </div>

            <form action="#" id="FormCreateAppCategory">

                <div class="form-group">

                    <input name="txtAppCategoryName" id="txtAppCategoryName" class="form-control" placeholder="Category Name ..." required />
                </div>
                <div class="form-group">

                    <input name="txtFriendlyAppCategoryName" id="txtFriendlyAppCategoryName" class="form-control" placeholder="Friendly Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Category" class="btn btn-sm ui blue button" />
                </div>

                <div id="CreateAppCategoryInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Edit Application Category
                </span>
            </div>

            <form asp-action="Edit" id="FormEditAppCategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="txtEditAppCategoryID" />
                <div class="form-group">
                    <input class="form-control" id="txtEditAppCategoryName" placeholder="Category Name ..." />
                </div>
                <div class="form-group">
                    <input class="form-control" id="txtEditAppFriendlyName" placeholder="Friendly Name ..." />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui blue button" />
                    <input type="reset" value="Clear" class="btn btn-sm ui secondary button" />
                </div>
            </form>

            <div id="EditAppCategoryInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> @ViewBag.Title</h4>
                <h6 class="card-subtitle"> List of all created @ViewBag.Title </h6>

                <table id="TableAppCategory" class="table table-striped table-bordered" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Category ID
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Friendly Name
                            </th>
                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/NewDepot Scripts/Configurations/AppCategory.js"></script>

}