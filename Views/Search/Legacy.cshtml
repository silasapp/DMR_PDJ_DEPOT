                </div>
           

                @if (ViewBag.NotAdded != null)
                {
                int xcount = 0;
                <div class="box-warning">
                    <div class="box-header">
                        <h4>License not Added</h4>
                    </div>
                    <div class="box-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>NMDPRA Coy. ID</th>
                                    <th>Coy Name</th>
                                    <th>LicenseNo</th>
                                    <th>Address</th>
                                    <th>Issue Date</th>
                                    <th>Used</th>
                                    <th>Date Used</th>
                                    <th>License Stage</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in (List
                                <Legacies>
                                    )ViewBag.NotAdded)
                                    {
                                    xcount++;
