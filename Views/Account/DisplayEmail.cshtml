@model string


@{
    ViewBag.Title = "Account Created";
    var coy = (Company)ViewBag.Company;
}
<div class="row">
    <div class="pageTitle bg1">
        <h2 class="lefty">Depot Account Created</h2>
        <div class="righty">
            @*<ul>
                <li class="selected">Step 1</li>
                <li>Step 2</li>
                <li>Step 3</li>
                <li>Step 4</li>
            </ul>*@
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div style="background-color: #ece8d4; padding:30px; margin-top:10px;">
            <p>
                You have created an account on Depot Portal. An email has been sent to your email <a href="#">@ViewBag.Email</a> for account activation. Kindly check your email inbox and/or junk mail folder to confirm that the email was received.
            </p>
            @*<h2>@coy.Name</h2>*@
            <p>
                <strong>Next steps</strong>
                <ul style="margin: 0; padding: 0; padding-left: 20px;">
                    <li>Activate your account by following the activation link therein</li>
                    <li>Login to the Depot portal to submit your Permit Application</li>
                </ul>
            </p>
            <p>
                <strong>Learn more</strong>
                <ul style="margin: 0; padding: 0; padding-left: 20px;">
                    <li>Read our FAQ</li>
                    <li>Browse through our Video tutorials</li>
                    <li>Contact us for help or enquiry</li>
                </ul>
            </p>

          
            <p>
                Please <a href="/Account/ResendEmailActivation">Click here to resend the Activation Link</a>, if you can't find it in your Mailbox or Junkmail Folder  
            </p>
           
        </div>
    </div>
</div>


