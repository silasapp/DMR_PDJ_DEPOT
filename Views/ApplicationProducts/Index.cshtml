
@{ ViewData["Title"] = "Application Products Configurations";
    Layout = "~/Views/Shared/_ElaLayout.cshtml"; }

<h2>@ViewData["Title"]</h2>

<br />

<div class="row">

    <div class="col-sm-6">

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Create App Products
                </span>
            </div>

            <form action="#" id="FormCreateAppProduct">

                <input name="txtAppProductName" id="txtAppProductName" class="form-control" placeholder="App Product Name..." required />

                <br />
                <input name="txtAppProductShortName" id="txtAppProductShortName" class="form-control " placeholder="App Product Short Name..." required />

                <br />



                <div class="form-group">
                    <input type="submit" value="Create App Product" class="btn btn-sm ui red button" />
                </div>

                <div id="CreateAppProductInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Edit App Product
                </span>
            </div>


            <form asp-action="Edit" id="FormEditAppProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="txtEditAppProductID" />
                <div class="form-group">

                    <input class="form-control" id="txtEditAppProductName" placeholder="Edit App Product Name..." />

                    <br />

                    <input name="txtEditAppProductShortName" id="txtEditAppProductShortName" class="form-control" placeholder="App Stage Short Name... (Eg. SUI)" required />
                </div>


                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui orange button" />
                    <input type="reset" value="Clear" class="btn btn-sm ui grey button" />
                </div>

            </form>

            <div id="EditAppProductInfo"> </div>
        </div>
    </div>
    <div class="col-sm-6">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> Application Produts </h4>
                <h6 class="card-subtitle"> List of all Application Products </h6>

                <div class="table-responsive">
                    <table id="TableAppProduct" class="table table-striped table-bordered" style="font-size:smaller">
                        <thead>
                            <tr>
                                <th>
                                    Product ID
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Short Name
                                </th>
                                <th>
                                    Created At
                                </th>
                                <th>
                                    Updated At
                                </th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

</div>


@section Scripts{

    <script src="~/js/NewDepot Scripts/Configurations/ApplicationProducts.js"></script>

}