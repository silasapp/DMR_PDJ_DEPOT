
@{
    ViewData["Title"] = "Field Office Configuration";
    ViewData["BodyClass"] = "fix-header fix-sidebar";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";

}

<div class="row">

    <div class="col-sm-4">

        <div class="card">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Create Field Office
                </span>
            </div>

            <form action="#" id="FormCreateFieldOffice">

                <div class="form-group">
                    <input name="txtFieldOfficeName" id="txtFieldOfficeName" class="form-control" placeholder="Field Office Name ..." required />

                </div>

                <div class="form-group">
                    <input type="submit" value="Create Field Office" class="ui brown small button" />
                </div>

                <div id="FieldOfficeInfo"> </div>
            </form>


        </div>

        <br />

        <div class="ui brown segment">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Edit Field Office
                </span>
            </div>


            <form asp-action="Edit" id="FormEditFieldOffice">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" id="txtEditFieldOfficeID" />

                <div class="form-group">

                    <input name="txtEditFieldOffice" id="txtEditFieldOffice" class="form-control" placeholder="Field Office Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Edit" class="ui brown small button" />
                    <input type="reset" class="btn btn-sm ui grey small button" />
                </div>
            </form>

            <div id="EditFieldOfficeInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">
        <div class="card">

            <div class="card-body">

                <h4 class="card-title"> Field Offices </h4>
                <h6 class="card-subtitle"> List of all created field offices </h6>

                <table id="TableFieldOffice" class="ui celled table table-hover" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Field Office ID
                            </th>
                            <th>
                                Field Office Name
                            </th>

                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>

        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/NewDepot Scripts/Configurations/FieldOffice.js"></script>

}
