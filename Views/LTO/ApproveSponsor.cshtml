            </ul>
        </div>
        <div class="clear"></div>
    </div>
</div>
@*<div class="page-header"><h2>@ViewBag.Title</h2></div>*@


<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Company Name
        </dt>

        <dd>
            @*@Model.CompanyName (@Model.ContactNumber)*@
        </dd>
        <dt>
           Facility Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            No of DriveIn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoofDriveIn)
        </dd>

        <dt>
            No of DriveOut
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoOfDriveOut)
        </dd>
        <dt>
           
        </dt>

        <dd>
            <h3>Address</h3>
        </dd>

        <dt>
           
        </dt>

        <dd>
            @Model.address_1, @Model.city,@Model.StateName @Model.CountryName
        </dd>
        <dt>

        </dt>

        <dd>
            <h3>Tanks</h3>
        </dd>
        <dt>

        </dt>

        <dd>
            <table class="table table-bordered">

                <tr>
                    <th>Name</th>
                    <th>Capacity</th>
                    <th>Product</th>
                    <th>Position</th>
                </tr>

                @foreach (var item in Model.Tanks)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.MaxCapacity</td>
                        <td>@item.FriendlyName (@item.ProductName)</td>
                        <td>@item.Position</td>
                    </tr>

                }
            </table>

        </dd>
       
    </dl>
</div>

<div class="row">
    <form action="/lto/approvesponsor" method="post">
        <input type="hidden" name="id" value="@ViewBag.mcId" />
        <div class="col-md-offset-2 col-md-10">
            <div class="form-group">
                <label class="col-md-6">Comment</label>
                <div class="col-md-9">
                    <textarea rows="5" required class="form-control" placeholder="Drop a Comment"></textarea>
                </div>
            </div>
            <hr />
            <div class="form-group col-md-offset-2 col-md-10">
                <input type="submit" class=" btn btn-primary" name="approve" value="approve" />
                <input type="submit" class=" btn btn-primary" name="approve" value="disApprove" />
            </div>
        </div>
    </form>
</div>
