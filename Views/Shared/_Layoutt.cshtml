@using NewDepot.Controllers;
@using NewDepot.Helpers;
@using Microsoft.AspNetCore.Http

@{
    GeneralClass generalClass = new GeneralClass();

    var appCategory = generalClass.GetAppCategory();
    List<Phases> appCategories = appCategory as List<Phases>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title - NMDPRA DEPOT PORTAL</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/nmdpra.png">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap.css" />
    <link rel="stylesheet" href="~/css/dataTables.min.css" />
    <link rel="stylesheet" href="~/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" />
    <link rel="stylesheet" href="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.3.0/css/ol.css" type="text/css">

    <link rel="stylesheet" href="~/css/dataTables.checkboxes.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/ela/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    @*<link href="~/css/FontAwesome.css" rel="stylesheet" />*@

    <link href="~/ela/css/ClientStyle.css" rel="stylesheet" />
    <link href="~/OldDepotStyle/Content/ogisp_style/MainStyle.css" rel="stylesheet" />
    <link href="~/OldDepotStyle/Content/ogisp_style/otherStyle.css" rel="stylesheet" />



    <script src="~/lib/semantic ui/dist/semantic.js"></script>
    <style>
        .lefty {
            font-weight: bolder;
            font-family: 'Times New Roman' !important;
        }

        .loading {
            position: relative;
        }

            .loading::after {
                background-color: rgba(44, 104, 198, 0.92);
                content: 'Loading...';
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                color: white;
            }

        .clientfooter {
            border-top: 1px solid rgba(37, 37, 38, 0.13);
            left: 40px;
            position: relative;
            bottom: 0 !important;
            width: 100%;
            margin-bottom: 0px;
        }

        .changeBG {
            opacity: 0.5;
            background-color: transparent;
        }

        .stoiip {
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="60"> <text x="60" y="23" style="float:right">MMstb</text></svg>') no-repeat;
        }

        .selected {
            background-color: red;
        }

        .FirstDashCount {
            min-height: 150px;
            text-align: center;
            box-sizing: border-box;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgb(0, 0, 0);
            background-color: rgb(11, 10, 10);
            color: #f1f0f0;
            opacity: 1;
            text-align: center;
            vertical-align: middle;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

            .FirstDashCount > b {
                font-size: 90px;
            }


        .DashCompanyName {
            text-align: center;
            vertical-align: middle;
            font-size: 30px;
            color: #eeda6d;
        }

        .DashCount {
            opacity: 0.7;
            float: left;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            width: initial;
            text-align: center;
            padding: 10px;
            background-color: rgb(12, 3, 3);
            color: white;
            min-height: 70px;
            width: inherit;
            font-weight: bolder;
            display: inline-block;
        }

        .DashCompanyName {
            text-align: center;
            vertical-align: middle;
            font-size: 30px;
            color: #eeda6d;
        }


        #BackImage {
            background: url('/images/index-bg2.png');
            padding: 50px 30px 50px 30px;
            color: whitesmoke;
            background-repeat: no-repeat;
            background-size: 100%
        }
    </style>
</head>
<body>
    <div class="fad">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="max-height:60px!important; box-shadow: 0 3px 5px black;">

            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/OldDepotStyle/Content/Images/coat-of-arm.jpg" width="100" style="max-height:60px" class="d-inline-block align-top" alt="">

                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarsExample07">


                </div>
            </div>
        </nav>



        <div class="container" style=" box-shadow:0 0 5px #c5c5c5; padding: 0 15px 20px 15px; background:white;">
            <div class="panel-body">
                <br /><br /><p></p>


                @RenderBody()
                <br />
            </div>
        </div>
    </div>

    <br />


    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/js/jqueryConfirm.js"></script>
    @RenderSection("Scripts", required: false)

    <footer class="clientfooter text-center">
        Copyright © @DateTime.UtcNow.AddHours(1).Year. The Nigerian Midstream and Downstream Petroleum Regulatory Authority (NMDPRA) Nigeria
    </footer>

</body>
</html>



