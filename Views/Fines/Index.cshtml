
@{
    ViewData["Title"] = "Fines Config.";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
    
}


<h2>@ViewData["Title"]</h2>

<br />

<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Create App Fine
                </span>
            </div>

            <form action="#" id="FormCreateFine">

                <div class="form-group">

                    <input name="txtFineName" id="txtFineName" class="form-control" placeholder="Fine Name ..." required />

                    <br />

                    <input name="txtFineDescription" id="txtFineDescription" class="form-control" placeholder="Fine Descriptions" />
                </div>

                <div class="row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="content text-secondary"> Amount </label>
                            <input name="txtFineAmount" type="number" step="500" id="txtFineAmount" value="0" class="form-control" placeholder="Fine Amount ..." required />

                            <br />

                            <label class="content text-secondary"> Service Charge </label>
                            <input name="txtServiceCharge" type="number" step="500" id="txtServiceCharge" value="0" class="form-control" placeholder="Servic Charge Amount ..." required />
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Create App Fine" class="btn btn-sm ui facebook button" />
                </div>

                <div id="CreateFineInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Edit App Fine
                </span>
            </div>


            <form asp-action="Edit" id="FormEditFine">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="txtEditFineID" />
                <div class="form-group">

                    <input class="form-control" id="txtEditFineName" placeholder="Edit Fine Name..." />

                    <br />

                    <input name="txtEditAppFineDescription" id="txtEditAppFineDescription" class="form-control" placeholder="Fine Description" />
                </div>

                <div class="row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="content text-secondary"> Amount</label>
                            <input name="txtEditFineAmount" type="number" step="500" id="txtEditFineAmount" value="0" class="form-control" placeholder="Fine Amount ..." required />

                            <br />

                            <label class="content text-secondary"> Service Charge </label>
                            <input name="txtEditServiceCharge" id="txtEditServiceCharge" type="number" step="500" id="txtStageAmount" value="0" class="form-control" placeholder="App Stage Amount ..." required />

                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui facebook button" />
                    <input type="reset" value="Clear" class="btn btn-sm ui grey button" />
                </div>

            </form>

            <div id="EditFineInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> Application Fines </h4>
                <h6 class="card-subtitle text-white"> List of all created Application Fines </h6>

                <table id="FinesTables" class="table table-bordered table-hover" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Fine ID
                            </th>
                            <th>
                                Fine Name
                            </th>
                            <th>
                                Fine Description
                            </th>
                            <th>
                                Amount
                            </th>

                            <th>
                                Service Charge
                            </th>

                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>


