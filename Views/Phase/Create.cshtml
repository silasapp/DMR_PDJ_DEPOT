@model NewDepot.Models.Phase

@{
    //ViewBag.Title = "Create";
    Layout = null;
}

<style>
    .input-group{
        margin-bottom: 0;
    }
</style>

@using (Html.BeginForm("Create", "Phase", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

<div class="modal-body">
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label class="control-label col-md-4">Category</label>
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.Category_Id, (SelectList)ViewBag.Categories, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Category_Id)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Amount</label>
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-addon">₦</span>
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-4">Amount By Tank Volume</label>
        <div class="col-md-8">
            <div class="input-group">
                @if (Model.PriceByVolume)
                {
                    <input type="checkbox" id="PriceByVolume" name="PriceByVol" checked value="Yes" />
                }
                else
                {
                    <input type="checkbox" id="PriceByVolume" name="PriceByVol" value="Yes" />

                }
                <label id="PriceByVolumeLbl" for="PriceByVolume"> By Volume</label>

            </div>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-4">Processing Fee</label>
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-addon">₦</span>
                @Html.TextBoxFor(model => model.ProcessingFee, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2">
            @if (Model.ProcessingFeeByTank)
            {
                <input type="checkbox" id="ProcessingFeeByTank" name="ProcessFeeByTk" checked value="Yes" />


            }
            else
            {
                <input type="checkbox" id="ProcessingFeeByTank" name="ProcessFeeByTk" value="Yes" />


            }

            <label id="ProcessingFeeByTankLbl" for="ProcessingFeeByTank"> Per Tank </label>

        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-4">Service Charge</label>
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-addon">₦</span>
                @Html.TextBoxFor(model => model.ServiceCharge, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ServiceCharge)
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Stage</label>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Stage, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Stage)
        </div>
    </div>
</div>
    <hr class="clear" />
    <div class="form-group">
        <div class="txtcenter">
            <input type="submit" value="Save & Continue" class="btn btn-success" />
        </div>
    </div>
}
