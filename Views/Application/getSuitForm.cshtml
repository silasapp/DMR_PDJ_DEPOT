                                <div class="form-group row">
                                    <label class="col-md-5 control-label"><b>Size of the Land</b></label>
                                    <div class="col-md-7">
                                        <div class="input-group">
                                            <input type="number" data-name="SizeOfLand" class="form-control" readonly value="" placeholder="100" />
                                            <span class="input-group-addon" style="font-size: 14px;">Square Meters</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-5 control-label"><b>Site is Along Pipe Line</b></label>
                                    <div class="col-md-7">
                                        <div class="">
                                            <input type="text" data-name="ISAlongPipeLine" id="alongpl" readonly class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 control-label"><b>Site is Under High Tension</b></label>
                                    <div class="col-md-7">
                                        <div class="">
                                            <input type="text" data-name="IsUnderHighTension" id="undt" readonly class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                @*<div class="form-group row">
                                        <label class="col-md-5 control-label">Number of Stations Within 2Km</b></label>
                                        <div class="col-md-7">
                                            <input type="number" data-name="StationsWithin2KM" class="form-control" readonly value="" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-5 control-label">Distance From Existing Station</b></label>
                                        <div class="col-md-7">
                                            <input type="text" data-name="DistanceFromExistingStation" class="form-control" readonly />
                                        </div>
                                    </div>*@

                                <div class="form-group row">
                                    <label class="col-md-5 control-label"><b>Site is on HighWay</b></label>
                                    <div class="col-md-7">
                                        <div class="radio">
                                            <input type="text" data-name="IsOnHighWay" id="onhw" readonly class="form-control" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Modify <i class="fa fa-edit"></i></button>
                <button type="button" id="btnConfirmSubmit2" class="btn btn-success">Submit <i class="fa fa-check"></i></button>
            </div>
        </div>
    </div>
</div>