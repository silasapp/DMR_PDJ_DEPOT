@model NewDepot.Models.Document_Type

@{
    //ViewBag.Title = "Delete";
    Layout = null;
}

<div class="modal-body">

    <h4>Are you sure you want to delete this Document?</h4>
    <div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Document Name", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="clear"></div>
