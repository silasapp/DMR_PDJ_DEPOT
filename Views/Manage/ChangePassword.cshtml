@model NewDepot.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    if (User.IsInRole("Company"))
    {
        Layout = "~/Views/Shared/_ClientLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    }
}

@if (User.IsInRole("Company"))
{
    <div class="row">
        <div class="pageTitle bg1">
            <h2 class="lefty">@ViewBag.Title</h2>
            <div class="righty">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>Change Password</li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    if (ViewBag.Msg != null)
    {
        string alerttype = (ViewBag.Type.ToLower() == "fail" ? "alert-danger"
        : (ViewBag.Type.ToLower() == "warn" ? "alert-warning"
        : (ViewBag.Type.ToLower() == "info" ? "alert-info" : "alert-success")));

        string head = (ViewBag.Type.ToLower() == "fail" ? "Password Not Changed!"
        : (ViewBag.Type.ToLower() == "pass" ? "Password Changed!" : "Alert!"));

        <div class="col-md-12">
            <div class="alert @alerttype" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <strong>@head</strong> @ViewBag.Msg
            </div>
        </div>
    }
    <hr class="clear" />
    <div class="col-md-8 col-md-offset-2">
        <div class="well">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="txtcenter">
                    <a href="/Account/Dashboard" class="btn btn-default">Cancel</a> &nbsp;<input type="submit" value="Change password" class="btn btn-warning" />
                </div>
            </div>
            }
        </div>
    </div>
}
else
{
    <div class="content">
        <h3 class="lefty">Change Password</h3>
        @if (ViewBag.Msg != null)
        {
            string alerttype = (ViewBag.Type.ToLower() == "fail" ? "alert-danger"
            : (ViewBag.Type.ToLower() == "warn" ? "alert-warning"
            : (ViewBag.Type.ToLower() == "info" ? "alert-info" : "alert-success")));

            string head = (ViewBag.Type.ToLower() == "fail" ? "Schedule Not Approved!"
            : (ViewBag.Type.ToLower() == "pass" ? "Schedule Approved" : "Alert!"));

            <div class="col-md-12">
                <div class="alert @alerttype" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <strong>@head</strong> @ViewBag.Msg
                </div>
            </div>
        }
        <hr class="clear" />

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="well">
                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="txtcenter">
                            <a href="/Account/Dashboard" class="btn btn-default">Cancel</a> &nbsp;<input type="submit" value="Change password" class="btn btn-warning" />
                        </div>
                    </div>
                    }
                </div>
            </div>

        </div>
    </div>
}



@section Scripts {

