
@{
    ViewData["Title"] = "Zonas & Fieild Office Mapping";
    ViewData["BodyClass"] = "fix-header fix-sidebar";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";

}

<div class="row">

    <div class="col-sm-4">

        <div class="card">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Create Zones & Field Office Mapping
                </span>
            </div>

            <form action="#" id="FormCreateZoneFieldOffice">

                <div class="form-group">

                    <label class="control-label"> Zones </label>
                    <select name="txtZones" id="txtZones" class="form-control" required></select>

                    <br />

                    <label class="control-label"> Field Office </label>
                    <select name="txtFieldOffice" id="txtFieldOffice" class="form-control" required></select>

                </div>

                <div class="form-group">
                    <input type="submit" value="Create Zone and Field Office" class="ui black small button" />
                </div>

                <div id="ZoneFieldOfficeInfo"> </div>
            </form>


        </div>

        <br />

        <div class="ui black segment">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Edit Zones & Field Office Mapping
                </span>
            </div>

            <form asp-action="Edit" id="FormEditZoneFieldOffice">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" id="txtEditZoneFieldOfficeID" />

                <br />
                <div class="text-sm-left" id="relationshipStatus"> </div>


                <br />

                <label class="control-label">Select New Zones </label>
                <select name="txtEditZones" id="txtEditZones" class="form-control" required></select>

                <br />

                <label class="control-label">Select New Field Office </label>
                <select name="txtEditFieldOffice" id="txtEditFieldOffice" class="form-control" required></select>

                <br />

                <div class="form-group">
                    <input type="submit" value="Save Edit" class="ui black small button" />
                    <input type="reset" id="FormEditZoneFieldOfficeReset" class="ui grey small button" />
                </div>
            </form>

            <div id="EditZonalFieldOfficeeInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card">

            <div class="card-body">

                <h4 class="card-title"> @ViewBag.Title</h4>
                <h6 class="card-subtitle"> List of all created @ViewBag.Title </h6>

                <table id="TableZoneFieldOffice" class="ui celled table table-hover order-column display" style="width:100%; font-size:smaller">
                    <thead>
                        <tr>
                            <th>
                                ZoneFieldOffice ID
                            </th>
                            <th>
                                Country ID
                            </th>
                            <th>
                                State ID
                            </th>
                            <th>
                                Zone ID
                            </th>
                            <th>
                                FieldOffice ID
                            </th>
                            <th>
                                Country
                            </th>

                            <th>
                                Zonal Office
                            </th>

                            <th>
                                Field Office
                            </th>
                            <th>
                                States Covered
                            </th>

                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>

@section Scripts{

    <script src="~/js/NewDepot Scripts/Configurations/Zones.js"></script>
    <script src="~/js/NewDepot Scripts/Configurations/ZoneFieldOffice.js"></script>

}